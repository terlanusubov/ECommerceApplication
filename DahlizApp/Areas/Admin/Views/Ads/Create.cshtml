@model DahlizApp.Models.Ad

@{
    ViewData["Title"] = "Create";
}
<div class="col-12">

    <h2>Create</h2>

    <h4>Ad</h4>
</div>
<hr />
<div class="col-12">
    <div class="row">
        <div class="col-12">
            <form id="adsAddForm" asp-controller="Ads" method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <div class="error_wrapper ad_heading"></div>
                    <label asp-for="Heading" class="control-label"></label>
                    <input data-element="true" data-type="text" data-error="ad_heading" asp-for="Heading" class="form-control" />
                    <span asp-validation-for="Heading" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="error_wrapper ad_title"></div>
                    <label asp-for="Title" class="control-label"></label>
                    <input data-element="true" data-type="text" data-error="ad_title" asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="error_wrapper ad_link"></div>
                    <label asp-for="Link" class="control-label"></label>
                    <input data-element="true" data-type="text" data-error="ad_link" asp-for="Link" class="form-control" />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>


                <div class="row">
                    <div class="col-12">
                        <div class="card card-body">
                            <h4 class="card-title">Ad Photo</h4>
                            <div class="error_wrapper image_error"></div>
                            <span style="font-size:3em;" id="photo_info"></span>
                            <div class="item">
                                <input data-controller="Ads" data-error="image_error" data-element="true" data-type="single" id="Upload" data-path="Ads" type="file" />
                            </div>
                            <ul class="photos"></ul>
                        </div>
                    </div>
                </div>
                <select name="PhotoPath" style="display:none;" multiple id="add_photo_names"></select>
                <select name="DeletePhotoPath" style="display:none;" multiple id="delete_photos"></select>
                <button type="submit" id="btnSubmit" data-parent="#adsAddForm" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>

<div class="col-12">
    <a class="btn btn-success mt-2" asp-action="Index">Back to List</a>
</div>
